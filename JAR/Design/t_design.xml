<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">
	<include
	layout="@layout/t_guideline">
	</include>
	<Button
	android:id="@+id/button_1"
	android:layout_width="0dp"
	android:layout_height="0dp"
	android:text="ClickMe"
	app:layout_constraintStart_toEndOf="@+id/button_1_start_guideline"
	app:layout_constraintEnd_toStartOf="@+id/button_1_end_guideline"
	app:layout_constraintTop_toBottomOf="@+id/button_1_top_guideline"
	app:layout_constraintBottom_toTopOf="@+id/button_1_bottom_guideline">
	</Button>
	<Button
	android:id="@+id/button_2"
	android:layout_width="0dp"
	android:layout_height="0dp"
	android:text="ClickMe"
	app:layout_constraintStart_toEndOf="@+id/button_2_start_guideline"
	app:layout_constraintEnd_toStartOf="@+id/button_2_end_guideline"
	app:layout_constraintTop_toBottomOf="@+id/button_2_top_guideline"
	app:layout_constraintBottom_toTopOf="@+id/button_2_bottom_guideline">
	</Button>
	<EditText
	android:id="@+id/editText_1"
	android:layout_width="0dp"
	android:layout_height="0dp"
	app:layout_constraintStart_toEndOf="@+id/editText_1_start_guideline"
	app:layout_constraintEnd_toStartOf="@+id/editText_1_end_guideline"
	app:layout_constraintTop_toBottomOf="@+id/editText_1_top_guideline"
	app:layout_constraintBottom_toTopOf="@+id/editText_1_bottom_guideline">
	</EditText>
	<EditText
	android:id="@+id/editText_2"
	android:layout_width="0dp"
	android:layout_height="0dp"
	app:layout_constraintStart_toEndOf="@+id/editText_2_start_guideline"
	app:layout_constraintEnd_toStartOf="@+id/editText_2_end_guideline"
	app:layout_constraintTop_toBottomOf="@+id/editText_2_top_guideline"
	app:layout_constraintBottom_toTopOf="@+id/editText_2_bottom_guideline">
	</EditText>
	<ImageView
	android:id="@+id/imageView_1"
	android:layout_width="0dp"
	android:layout_height="0dp"
	app:layout_constraintStart_toEndOf="@+id/imageView_1_start_guideline"
	app:layout_constraintEnd_toStartOf="@+id/imageView_1_end_guideline"
	app:layout_constraintTop_toBottomOf="@+id/imageView_1_top_guideline"
	app:layout_constraintBottom_toTopOf="@+id/imageView_1_bottom_guideline">
	</ImageView>
</android.support.constraint.ConstraintLayout>
